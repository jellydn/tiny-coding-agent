{
  "name": "tiny-agent",
  "version": "0.1.2",
  "private": true,
  "type": "module",
  "module": "index.ts",
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "bun build index.ts --compile --outfile=tiny-agent",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "bun run tsc --noEmit",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "prepare": "husky",
    "release:patch": "bun run test && bun run typecheck && bun run lint && bunx bumpp patch --yes",
    "release:minor": "bun run test && bun run typecheck && bun run lint && bunx bumpp minor --yes",
    "release:major": "bun run test && bun run typecheck && bun run lint && bunx bumpp major --yes",
    "pre": "bun run test && bun run typecheck && bun run lint"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^1.25.2",
    "ollama": "^0.6.3",
    "openai": "^6.16.0",
    "yaml": "^2.8.2",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bumpp": "^10.4.0",
    "husky": "^9.1.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
